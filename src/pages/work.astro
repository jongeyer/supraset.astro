---
import Layout from '@/layouts/Layout.astro'
import Markdown from '@/components/Markdown.astro'
import Icon from '@/components/Icon.astro'

import { getEntry } from 'astro:content'

const entry = await getEntry('pages', 'work')
let Content
if (entry) {
  Content = (await entry.render()).Content
} else {
  throw new Error('entry is undefined')
}
---

<Layout 
  title={entry.data.title}
  styles="grid h-screen overflow-auto"
  width="flex"
>
  <div class="my-12 px-8">
    <Icon icon="compass" size="6em" />
    <Icon icon="desktop" size="6em" />
    <Icon icon="file-code" size="6em" />
    <Markdown mixable>
      <Content />
    </Markdown>
  </div>
</Layout>