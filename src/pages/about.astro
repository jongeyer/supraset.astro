---
import Layout from '../layouts/Layout.astro';
import Markdown from '../components/Markdown.astro';
import Icon from '../components/Icon.astro';

import { getEntry } from 'astro:content';

const entry = await getEntry('pages', 'about');
let Content;
if (entry) {
  Content = (await entry.render()).Content;
} else {
  throw new Error('entry is undefined');
}

---

<Layout 
  title={entry.data.title} 
  styles="grid h-screen overflow-auto bg-ocean-800 text-zorba-200 [.theme-light_&]:bg-mikan-50 [.theme-light_&]:text-zorba-800"
>
  <div class="my-12 px-8">
    <Icon icon="wave" size="8em" />
    <Icon icon="smile-sticker" size="8em" />
    <Markdown>
      <Content />
    </Markdown>
  </div>
</Layout>
