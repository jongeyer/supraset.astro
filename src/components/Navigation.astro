<div class="relative">
  <!-- Hamburger Button -->
  <button
    id="menuButton"
    class="z-50 p-4 focus:outline-none fixed top-4 right-4 hover:rotate-90 transition-transform"
    aria-label="Menu"
  >
    <div class="w-5 h-5 flex flex-col justify-between">
      <span class="block h-0.5 w-full bg-zorba-500 transition-all duration-300 ease-in-out"></span>
      <span class="block h-0.5 w-full bg-zorba-500 transition-all duration-300 ease-in-out"></span>
      <span class="block h-0.5 w-full bg-zorba-500 transition-all duration-300 ease-in-out"></span>
    </div>
  </button>

  <!-- Overlay Menu -->
  <div
    id="menuOverlay"
    class="fixed inset-0 bg-black bg-opacity-90 z-40 transition-opacity duration-300 ease-in-out opacity-0 pointer-events-none"
  >
    <nav class="h-full flex flex-col items-center justify-center">
      <ul class="space-y-8 text-center">
        <li>
          <a href="./" class="text-white text-4xl hover:text-gray-300 transition-colors">Home</a>
        </li>
        <li>
          <a href="./about" class="text-white text-4xl hover:text-gray-300 transition-colors">About</a>
        </li>
        <li>
          <a href="./projects" class="text-white text-4xl hover:text-gray-300 transition-colors">Projects</a>
        </li>
        <li>
          <a href="./contact" class="text-white text-4xl hover:text-gray-300 transition-colors">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<style>
  /* Additional styles for the menu animation states */
  .menu-open span:first-child {
    transform: rotate(45deg) translate(0.375rem, 0.375rem);
  }

  .menu-open span:nth-child(2) {
    opacity: 0;
  }

  .menu-open span:last-child {
    transform: rotate(-45deg) translate(0.375rem, -0.375rem);
  }

  .overlay-open {
    opacity: 1 !important;
    pointer-events: auto !important;
  }
</style>

<script>
  // Client-side JavaScript
  const menuButton = document.getElementById('menuButton');
  const menuOverlay = document.getElementById('menuOverlay');
  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    menuButton?.classList.toggle('menu-open');
    menuOverlay?.classList.toggle('overlay-open');
    document.body.style.overflow = isOpen ? 'hidden' : 'auto';
  }

  // Add click event listener
  menuButton?.addEventListener('click', toggleMenu);

  // Add click event listeners to menu items
  const menuItems = document.querySelectorAll('#menuOverlay a');
  menuItems.forEach(item => {
    item.addEventListener('click', toggleMenu);
  });
</script>